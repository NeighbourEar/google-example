<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.example.androidsimple"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.androidsimple.CustomViewActivity" >

     <com.example.androidsimple.view.RatingBar
        android:id="@+id/sectorView"
        app:starSrc="@drawable/yellow_star"
        app:starDst="@drawable/grey_star"
        app:clickable="true"
        app:step="0.5"
        app:starNumber="5"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
   
</LinearLayout>
